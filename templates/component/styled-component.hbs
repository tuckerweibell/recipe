import React, {forwardRef} from 'react';
import Style from '@ezcater/snitches';
import theme from './{{ name }}.theme.config';

const styles = theme.css({});

type Props = Pick<Parameters<typeof styles>[0], 'keys' | 'of' | 'my' | 'props'>;

/**
 * Describe {{ name }} here.
 */
const {{ name }} = forwardRef<HTMLDivElement, Props>((initProps, ref) => {
  return (
    <Style ruleset={theme}>
      <div className={styles(initProps)} ref={ref} />
    </Style>
  );
});

/**
 * @component
 */
export default {{ name }};
