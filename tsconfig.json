{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // allows react jsx in tsx files
    "jsx": "react",
    "declaration": true,
    "strict": false,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["**/.*/", "**/dist", "**/node_modules"]
}
