{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // allows react jsx in tsx files
    "jsx": "react",
    "declaration": true,
    "outDir": "dist/types",
    "strict": false,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "dist"]
}
